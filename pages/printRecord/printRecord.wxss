/* pages/printRecord/printRecord.wxss */



.printRecord {
        background: rgb(255, 255, 255);
	font-size: 24rpx;
}

.printRecord .item {
        position: relative;
        background: rgb(255, 255, 255);
        padding: 40rpx 30rpx;
        border-bottom: 1rpx solid rgb(247, 247, 247);
        color: #323232;
}

.printRecord .item:last-child {
        border-bottom: 0rpx none;
}

.item .name {
        display: inline-block;
        margin-right: 140rpx;
}

.item .price {
        position: absolute;
        top: 40rpx;
        right: 30rpx;
        color: rgb(241, 92, 72);
}

.item .time {
        display: block;
        margin-top: 50rpx;
        font-size: 22rpx;
        color: rgb(166, 166, 166);
}

/*打印记录为空  */
.noPrint{
	width: 100%;
	height: 100%;
	line-height: 500rpx;
	color: #cccccc;
	text-align: center;
}