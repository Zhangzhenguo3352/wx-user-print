/* pages/my/my.wxss */
@import "../../template/navItem/navItem.wxss";
.myTitle{
	height: 320rpx;
	width: 100%;
	margin-bottom: 10px;
	position: relative;
	line-height: 1
}
.myTitle .bg{
	width:100%;
	height: 100%;
}
.myTitle .info{
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	padding-top: 30rpx;
	box-sizing: border-box;
}

.myTitle .info .title{
	width: 148rpx;
	height: 148rpx;
	border-radius: 50%;
	display: block;
	margin: 0 auto 30rpx;
}
.myTitle text{
	display: block;
	text-align: center;
	color:rgb(255, 255, 255);
}
.myTitle .name{
	font-size: 30rpx;
}
.myTitle .phone{
	font-size: 22rpx;
	margin-top: 22rpx;
}
.about{
	background: white;
	height: 44px;
	line-height: 44px;
	font-size: 12px;
	color: rgb(77, 77, 77);
	padding: 0 15px 0 17px;
}
.about .itemContent{
	border: none
}